<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/background_primary</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <!-- Metronic-inspired theme -->
    <style name="AppTheme.Metronic" parent="AppTheme">
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- Login theme -->
    <style name="AppTheme.Login" parent="AppTheme">
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!-- Card Style -->
    <style name="CardStyle">
        <item name="android:layout_margin">8dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardBackgroundColor">@color/background_card</item>
        <item name="contentPadding">16dp</item>
    </style>

    <!-- Primary Button Style -->
    <style name="PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">48dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="cornerRadius">6dp</item>
        <item name="android:elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!-- Gradient Button Style that matches Print Receipt button shape -->
    <style name="GradienButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:background">@drawable/button_gradient_bg</item>
        <item name="backgroundTint">@null</item>
        <item name="strokeColor">@android:color/transparent</item>
        <item name="strokeWidth">0dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!-- Secondary Button Style -->
    <style name="SecondaryButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_height">48dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="strokeColor">@color/border_default</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">6dp</item>
    </style>

    <!-- Text Input Layout Style -->
    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="boxCornerRadiusTopStart">6dp</item>
        <item name="boxCornerRadiusTopEnd">6dp</item>
        <item name="boxCornerRadiusBottomStart">6dp</item>
        <item name="boxCornerRadiusBottomEnd">6dp</item>
        <item name="android:textColorHint">@color/text_muted</item>
        <item name="hintTextColor">@color/colorPrimary</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>

    <!-- Title Text Style -->
    <style name="TitleText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:fontWeight" tools:targetApi="o">600</item>
        <item name="android:letterSpacing">-0.01</item>
    </style>

    <!-- Subtitle Text Style -->
    <style name="SubtitleText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>

    <!-- Dashboard Menu Item Style -->
    <style name="DashboardMenuItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">140dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@drawable/menu_item_background</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <!-- NoActionBar themes -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    
    <!-- Legacy styles (keep for compatibility) -->
    <style name="base_num_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/input_num</item>
        <item name="android:textSize">@dimen/input_num_text_size</item>
        <item name="android:background">@drawable/selector_btn_num_input</item>
    </style>
    
    <style name="key_pad_num_button" parent="base_num_button">
        <item name="android:layout_marginTop">0.5dp</item>
        <item name="android:layout_marginStart">0.5dp</item>
    </style>
    
    <style name="BaseDialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    
    <!-- Bottom Navigation Text Style -->
    <style name="BottomNavigationTextStyle">
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <!-- PIN Pad Button Style -->
    <style name="PinPadButton">
        <item name="android:layout_width">72dp</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@drawable/pin_button_background</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:elevation">0dp</item>
    </style>
</resources>