<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">
    
    <!-- Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@android:color/white"
        android:elevation="2dp">
        
        <ImageView
            android:id="@+id/back_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_arrow_back"
            android:tint="@color/text_primary"/>
        
        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Transfer"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium"/>
    </RelativeLayout>
    
    <!-- Main Content -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="40dp">
        
        <!-- Instructions -->
        <LinearLayout
            android:id="@+id/instructions_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingHorizontal="24dp">
            
            <TextView
                android:id="@+id/instruction_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Swipe/Masukkan Kartu"
                android:textColor="@color/text_primary"
                android:textSize="20sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="12dp"/>
            
            <TextView
                android:id="@+id/instruction_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Silahkan masukkan kartu pemberi dana."
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:gravity="center"/>
            
            <TextView
                android:id="@+id/instruction_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dana tersebut akan dipindahkan ke rekening Agen."
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:gravity="center"/>
        </LinearLayout>
        
        <!-- Card Reader Device Container -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/instructions_container"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp">
            
            <!-- Card Reader Device -->
            <ImageView
                android:id="@+id/card_reader_image"
                android:layout_width="127dp"
                android:layout_height="192dp"
                android:src="@drawable/ic_card_reader_device"
                android:scaleType="fitCenter"/>
            
            <!-- Card Container (initially hidden) -->
            <FrameLayout
                android:id="@+id/card_container"
                android:layout_width="78dp"
                android:layout_height="46dp"
                android:layout_gravity="center"
                android:layout_marginTop="80dp"
                android:rotation="90"
                android:visibility="gone">
                
                <!-- Card Background -->
                <ImageView
                    android:id="@+id/card_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_credit_card"
                    android:scaleType="fitXY"/>
                
                <!-- Card Chip -->
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical|start"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_card_chip"
                    android:scaleType="fitCenter"/>
            </FrameLayout>
        </FrameLayout>
        
        <!-- Status Button -->
        <FrameLayout
            android:id="@+id/status_button"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="80dp"
            android:background="@drawable/button_gradient_bg"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp">
            
            <TextView
                android:id="@+id/status_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status : Kernel in connected"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:fontFamily="sans-serif-medium"
                android:layout_gravity="center"/>
        </FrameLayout>
        
    </RelativeLayout>
    
</LinearLayout>