<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- Back button only -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:tint="#333333" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Verifikasi PIN"
            android:textColor="#333333"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center" />

        <View
            android:layout_width="24dp"
            android:layout_height="24dp" />

    </LinearLayout>

    <!-- Main content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Verify PIN section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_background"
                android:orientation="vertical"
                android:padding="32dp"
                android:elevation="4dp"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Masukkan PIN Anda"
                    android:textColor="#333333"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Verifikasi PIN untuk melanjutkan"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:gravity="center" />

                <!-- PIN bullets display -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_marginTop="40dp">

                    <View
                        android:id="@+id/pin_bullet_1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/pin_bullet_empty"
                        android:layout_margin="8dp" />

                    <View
                        android:id="@+id/pin_bullet_2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/pin_bullet_empty"
                        android:layout_margin="8dp" />

                    <View
                        android:id="@+id/pin_bullet_3"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/pin_bullet_empty"
                        android:layout_margin="8dp" />

                    <View
                        android:id="@+id/pin_bullet_4"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/pin_bullet_empty"
                        android:layout_margin="8dp" />

                    <View
                        android:id="@+id/pin_bullet_5"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/pin_bullet_empty"
                        android:layout_margin="8dp" />

                    <View
                        android:id="@+id/pin_bullet_6"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/pin_bullet_empty"
                        android:layout_margin="8dp" />

                </LinearLayout>

                <!-- Attempts indicator -->
                <TextView
                    android:id="@+id/attempts_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Sisa percobaan: 3"
                    android:textColor="#FFA726"
                    android:textSize="14sp"
                    android:layout_marginTop="16dp"
                    android:visibility="gone" />

            </LinearLayout>

            <!-- Virtual Keypad -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_background"
                android:orientation="vertical"
                android:padding="32dp"
                android:elevation="4dp"
                android:layout_marginBottom="20dp">

                <!-- Row 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Button
                        android:id="@+id/key_1"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/button_outline_green"
                        android:text="1"
                        android:textColor="#333333"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/key_2"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/button_outline_green"
                        android:text="2"
                        android:textColor="#333333"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/key_3"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/button_outline_green"
                        android:text="3"
                        android:textColor="#333333"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Row 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Button
                        android:id="@+id/key_4"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/button_outline_green"
                        android:text="4"
                        android:textColor="#333333"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/key_5"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/button_outline_green"
                        android:text="5"
                        android:textColor="#333333"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/key_6"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/button_outline_green"
                        android:text="6"
                        android:textColor="#333333"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Row 3 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Button
                        android:id="@+id/key_7"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/button_outline_green"
                        android:text="7"
                        android:textColor="#333333"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/key_8"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/button_outline_green"
                        android:text="8"
                        android:textColor="#333333"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/key_9"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/button_outline_green"
                        android:text="9"
                        android:textColor="#333333"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Row 4 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Button
                        android:id="@+id/key_clear"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/button_outline_green"
                        android:text="⌫"
                        android:textColor="#FF5722"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/key_0"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/button_outline_green"
                        android:text="0"
                        android:textColor="#333333"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_margin="8dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Verify button -->
            <Button
                android:id="@+id/btn_verify_pin"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/bas_gradient_header"
                android:text="VERIFIKASI PIN"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:enabled="false"
                android:alpha="0.5" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>