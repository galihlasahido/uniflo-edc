<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary">
    
    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">
        
        <ImageView
            android:id="@+id/back_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:tint="@color/white"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>
            
        <TextView
            android:id="@+id/title_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Change PIN"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginLeft="16dp"/>
    </LinearLayout>
    
    <!-- Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"
        android:fillViewport="true">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">
            
            <!-- Current PIN Section -->
            <TextView
                android:id="@+id/current_pin_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current PIN"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="12dp"/>
                
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="24dp">
                
                <EditText
                    android:id="@+id/current_pin_box_1"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/pin_box_background"
                    android:inputType="numberPassword"
                    android:maxLength="1"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:textColor="@color/text_primary"
                    android:layout_margin="4dp"/>
                    
                <EditText
                    android:id="@+id/current_pin_box_2"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/pin_box_background"
                    android:inputType="numberPassword"
                    android:maxLength="1"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:textColor="@color/text_primary"
                    android:layout_margin="4dp"/>
                    
                <EditText
                    android:id="@+id/current_pin_box_3"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/pin_box_background"
                    android:inputType="numberPassword"
                    android:maxLength="1"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:textColor="@color/text_primary"
                    android:layout_margin="4dp"/>
                    
                <EditText
                    android:id="@+id/current_pin_box_4"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/pin_box_background"
                    android:inputType="numberPassword"
                    android:maxLength="1"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:textColor="@color/text_primary"
                    android:layout_margin="4dp"/>
                    
                <EditText
                    android:id="@+id/current_pin_box_5"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/pin_box_background"
                    android:inputType="numberPassword"
                    android:maxLength="1"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:textColor="@color/text_primary"
                    android:layout_margin="4dp"/>
                    
                <EditText
                    android:id="@+id/current_pin_box_6"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/pin_box_background"
                    android:inputType="numberPassword"
                    android:maxLength="1"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:textColor="@color/text_primary"
                    android:layout_margin="4dp"/>
            </LinearLayout>
            
            <!-- New PIN Section -->
            <TextView
                android:id="@+id/new_pin_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New PIN"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="12dp"/>
                
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="24dp">
                
                <EditText
                    android:id="@+id/new_pin_box_1"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/pin_box_background"
                    android:inputType="numberPassword"
                    android:maxLength="1"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:textColor="@color/text_primary"
                    android:layout_margin="4dp"/>
                    
                <EditText
                    android:id="@+id/new_pin_box_2"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/pin_box_background"
                    android:inputType="numberPassword"
                    android:maxLength="1"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:textColor="@color/text_primary"
                    android:layout_margin="4dp"/>
                    
                <EditText
                    android:id="@+id/new_pin_box_3"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/pin_box_background"
                    android:inputType="numberPassword"
                    android:maxLength="1"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:textColor="@color/text_primary"
                    android:layout_margin="4dp"/>
                    
                <EditText
                    android:id="@+id/new_pin_box_4"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/pin_box_background"
                    android:inputType="numberPassword"
                    android:maxLength="1"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:textColor="@color/text_primary"
                    android:layout_margin="4dp"/>
                    
                <EditText
                    android:id="@+id/new_pin_box_5"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/pin_box_background"
                    android:inputType="numberPassword"
                    android:maxLength="1"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:textColor="@color/text_primary"
                    android:layout_margin="4dp"/>
                    
                <EditText
                    android:id="@+id/new_pin_box_6"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/pin_box_background"
                    android:inputType="numberPassword"
                    android:maxLength="1"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:textColor="@color/text_primary"
                    android:layout_margin="4dp"/>
            </LinearLayout>
            
            <!-- Confirm PIN Section -->
            <TextView
                android:id="@+id/confirm_pin_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirm New PIN"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="12dp"/>
                
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="24dp">
                
                <EditText
                    android:id="@+id/confirm_pin_box_1"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/pin_box_background"
                    android:inputType="numberPassword"
                    android:maxLength="1"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:textColor="@color/text_primary"
                    android:layout_margin="4dp"/>
                    
                <EditText
                    android:id="@+id/confirm_pin_box_2"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/pin_box_background"
                    android:inputType="numberPassword"
                    android:maxLength="1"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:textColor="@color/text_primary"
                    android:layout_margin="4dp"/>
                    
                <EditText
                    android:id="@+id/confirm_pin_box_3"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/pin_box_background"
                    android:inputType="numberPassword"
                    android:maxLength="1"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:textColor="@color/text_primary"
                    android:layout_margin="4dp"/>
                    
                <EditText
                    android:id="@+id/confirm_pin_box_4"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/pin_box_background"
                    android:inputType="numberPassword"
                    android:maxLength="1"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:textColor="@color/text_primary"
                    android:layout_margin="4dp"/>
                    
                <EditText
                    android:id="@+id/confirm_pin_box_5"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/pin_box_background"
                    android:inputType="numberPassword"
                    android:maxLength="1"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:textColor="@color/text_primary"
                    android:layout_margin="4dp"/>
                    
                <EditText
                    android:id="@+id/confirm_pin_box_6"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/pin_box_background"
                    android:inputType="numberPassword"
                    android:maxLength="1"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:textColor="@color/text_primary"
                    android:layout_margin="4dp"/>
            </LinearLayout>
            
            <!-- Error Message -->
            <TextView
                android:id="@+id/error_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorDanger"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginBottom="24dp"
                android:visibility="gone"/>
            
            <!-- Submit Button -->
            <FrameLayout
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/button_primary"
                android:clickable="true"
                android:focusable="true">
                
                <TextView
                    android:id="@+id/btn_submit_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change PIN"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-bold"
                    android:layout_gravity="center"/>
            </FrameLayout>
            
        </LinearLayout>
    </ScrollView>
    
</RelativeLayout>