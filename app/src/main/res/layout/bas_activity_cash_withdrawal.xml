<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary">
    
    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">
        
        <ImageView
            android:id="@+id/back_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:tint="@color/white"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>
            
        <TextView
            android:id="@+id/title_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cash Withdrawal"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginLeft="16dp"/>
    </LinearLayout>
    
    <!-- Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"
        android:fillViewport="true">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">
            
            <!-- Amount Display Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="24dp"
                android:layout_marginBottom="24dp"
                android:elevation="4dp">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Withdrawal Amount"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp"/>
                
                <TextView
                    android:id="@+id/amount_display"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rp 0"
                    android:textColor="@color/colorPrimary"
                    android:textSize="32sp"
                    android:fontFamily="sans-serif-bold"
                    android:gravity="center"/>
            </LinearLayout>
            
            <!-- Amount Input -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter Amount"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="8dp"/>
                
            <EditText
                android:id="@+id/amount_input"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/input_background"
                android:hint="Enter amount..."
                android:inputType="number"
                android:textSize="16sp"
                android:padding="16dp"
                android:layout_marginBottom="24dp"/>
            
            <!-- Quick Amount Options -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quick Amount"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="12dp"/>
                
            <GridLayout
                android:id="@+id/quick_amount_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:rowCount="2"
                android:layout_marginBottom="24dp"/>
            
            <!-- Error Message -->
            <TextView
                android:id="@+id/error_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorDanger"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginBottom="16dp"
                android:visibility="gone"/>
            
            <!-- Notes -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/info_background"
                android:padding="16dp"
                android:layout_marginBottom="24dp">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Important Notes:"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="8dp"/>
                    
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Minimum withdrawal: Rp 50,000"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:layout_marginBottom="4dp"/>
                    
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Maximum withdrawal: Rp 5,000,000"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:layout_marginBottom="4dp"/>
                    
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Amount must be multiple of Rp 50,000"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"/>
            </LinearLayout>
            
            <!-- Proceed Button -->
            <FrameLayout
                android:id="@+id/btn_proceed"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/button_primary"
                android:clickable="true"
                android:focusable="true">
                
                <TextView
                    android:id="@+id/btn_proceed_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Proceed"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-bold"
                    android:layout_gravity="center"/>
            </FrameLayout>
            
        </LinearLayout>
    </ScrollView>
    
</RelativeLayout>