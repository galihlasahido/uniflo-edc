<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ui.BasHomeActivity">

    <!-- Header with gradient background -->
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@drawable/bas_gradient_header"
        android:layout_alignParentTop="true">
        
        <!-- Status Bar -->
        <View
            android:id="@+id/status_bar"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

        <!-- Top Bar with Menu and Logo -->
        <LinearLayout
            android:id="@+id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/status_bar"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">
            
            <!-- Hamburger Menu -->
            <LinearLayout
                android:id="@+id/btn_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="16dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless">
                
                <View
                    android:layout_width="19dp"
                    android:layout_height="3dp"
                    android:background="#FFFFFF"
                    android:layout_marginBottom="3dp"/>
                    
                <View
                    android:layout_width="19dp"
                    android:layout_height="3dp"
                    android:background="#FFFFFF"
                    android:layout_marginBottom="3dp"/>
                    
                <View
                    android:layout_width="19dp"
                    android:layout_height="3dp"
                    android:background="#FFFFFF"/>
            </LinearLayout>
            
            <!-- Logo -->
            <ImageView
                android:layout_width="76dp"
                android:layout_height="29dp"
                android:src="@drawable/logo_bank_aceh"
                android:scaleType="fitCenter"
                android:layout_weight="1"/>
                
            <!-- Notification Icon -->
            <FrameLayout
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless">
                
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_notification"
                    app:tint="#FFFFFF" />
                    
                <!-- Red Dot -->
                <View
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:background="@drawable/red_dot"
                    android:layout_gravity="top|end"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="1dp"/>
            </FrameLayout>
        </LinearLayout>
        
        <!-- Search Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/search_bar_background"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">
            
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_search"
                app:tint="#808080"
                android:layout_marginEnd="8dp"/>
                
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter your input here"
                android:textColor="#808080"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                android:alpha="0.5"/>
        </LinearLayout>
    </RelativeLayout>

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"
        android:layout_marginTop="-21dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="36dp">

            <!-- Welcome Section -->

            <!-- Menu Grid Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transactions"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:fontFamily="sans-serif-bold"
                android:layout_marginBottom="16dp"/>

            <!-- First Row - Main Transactions -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <include layout="@layout/bas_menu_grid_item"
                    android:id="@+id/menu_sales"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <include layout="@layout/bas_menu_grid_item"
                    android:id="@+id/menu_balance_inquiry"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <include layout="@layout/bas_menu_grid_item"
                    android:id="@+id/menu_tarik_tunai"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <include layout="@layout/bas_menu_grid_item"
                    android:id="@+id/menu_transfer_on_us"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PIN Management"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:fontFamily="sans-serif-bold"
                android:layout_marginBottom="16dp"/>

            <!-- Second Row - PIN Management and Settings -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <include layout="@layout/bas_menu_grid_item"
                    android:id="@+id/menu_create_pin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <include layout="@layout/bas_menu_grid_item"
                    android:id="@+id/menu_change_pin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <include layout="@layout/bas_menu_grid_item"
                    android:id="@+id/menu_verification_pin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <include layout="@layout/bas_menu_grid_item"
                    android:id="@+id/menu_settings"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>