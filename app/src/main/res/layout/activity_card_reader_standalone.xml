<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- Header with back button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            app:tint="#333333" />

        <TextView
            android:id="@+id/title_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Masukkan Kartu"
            android:textColor="#333333"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center" />

        <View
            android:layout_width="24dp"
            android:layout_height="24dp" />

    </LinearLayout>

    <!-- Main content with scrollable area -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

        <!-- Card insertion section -->
        <LinearLayout
            android:id="@+id/card_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_background"
            android:orientation="vertical"
            android:padding="40dp"
            android:elevation="4dp"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Masukkan Kartu"
                android:textColor="#333333"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/subtitle_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="untuk melanjutkan transaksi"
                android:textColor="#666666"
                android:textSize="16sp"
                android:layout_marginBottom="32dp" />

            <!-- Card animation placeholder -->
            <ImageView
                android:id="@+id/iv_card_animation"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_card_reader_device"
                android:scaleType="centerInside"
                android:layout_marginBottom="24dp" />

            <!-- Progress indicator (hidden initially) -->
            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:visibility="gone"
                android:layout_marginBottom="16dp" />

            <!-- Card status -->
            <TextView
                android:id="@+id/tv_card_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Menunggu kartu..."
                android:textColor="#00C853"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Cancel button -->
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/button_outline_green"
            android:text="Batal"
            android:textColor="#666666"
            android:textSize="16sp" />

        <!-- ICC Debug Log section - Always visible for debugging -->
        <LinearLayout
            android:id="@+id/debug_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_background"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">
                
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ICC Debug Log"
                    android:textColor="#FF9800"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                
                <Button
                    android:id="@+id/btn_clear_debug"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:background="@drawable/button_outline_green"
                    android:text="Clear"
                    android:textColor="#666666"
                    android:textSize="12sp"
                    android:minWidth="60dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp" />
                
            </LinearLayout>

            <!-- Debug log text area with better height and scrolling -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="#1A1A1A"
                android:padding="8dp">

                <TextView
                    android:id="@+id/debug_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ICC Reader Debug Log Started...\n"
                    android:textColor="#00FF00"
                    android:textSize="11sp"
                    android:fontFamily="monospace"
                    android:lineSpacingMultiplier="1.2" />

            </ScrollView>

            <!-- Quick status indicators -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ATR: "
                    android:textColor="#666666"
                    android:textSize="12sp"
                    android:textStyle="bold" />
                
                <TextView
                    android:id="@+id/tv_atr_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Waiting..."
                    android:textColor="#333333"
                    android:textSize="12sp"
                    android:fontFamily="monospace"
                    android:singleLine="true"
                    android:ellipsize="end" />
                
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PAN: "
                    android:textColor="#666666"
                    android:textSize="12sp"
                    android:textStyle="bold" />
                
                <TextView
                    android:id="@+id/tv_pan_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Not found"
                    android:textColor="#333333"
                    android:textSize="12sp"
                    android:fontFamily="monospace" />
                
            </LinearLayout>

        </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>