<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ui.SalesModernActivity">

    <!-- Header with gradient background -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:background="@drawable/bas_gradient_header"
        android:layout_alignParentTop="true">
        
        <!-- Top Bar with Back Button and Title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_marginTop="24dp">
            
            <ImageView
                android:id="@+id/back_button"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_back"
                android:tint="#FFFFFF"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"/>
                
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/menu_sales"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginLeft="16dp"/>
                
            <ImageView
                android:id="@+id/btn_history"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_history"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="#FFFFFF" />
        </LinearLayout>
        
        <!-- Amount Display -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingHorizontal="24dp">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Amount"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:alpha="0.9"/>
                
            <TextView
                android:id="@+id/tv_display_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 0"
                android:textColor="#FFFFFF"
                android:textSize="32sp"
                android:fontFamily="sans-serif-bold"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"
        android:layout_marginTop="-40dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            
            <!-- White card container for amount input -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/white_card_background"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="30dp"
                android:padding="20dp">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enter Sale Amount"
                    android:textColor="#2C2C2C"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="12dp"/>
                
                <!-- Amount Input Field -->
                <EditText
                    android:id="@+id/et_amount"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:hint="0"
                    android:textColorHint="#CCCCCC"
                    android:textColor="#2C2C2C"
                    android:textSize="24sp"
                    android:fontFamily="sans-serif-medium"
                    android:background="@drawable/input_field_background"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:inputType="number"
                    android:gravity="center"
                    android:maxLength="12"/>
                    
                <!-- Quick Amount Buttons -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quick Amount"
                    android:textColor="#808080"
                    android:textSize="12sp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="12dp"/>
                    
                <GridLayout
                    android:id="@+id/quick_amount_grid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="3"
                    android:rowCount="2"
                    android:alignmentMode="alignMargins"
                    android:columnOrderPreserved="false"
                    android:rowOrderPreserved="false">
                    
                    <Button
                        android:id="@+id/btn_10k"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:text="10,000"
                        android:textColor="#00C853"
                        android:textSize="12sp"
                        android:background="@drawable/button_outline_green"
                        android:stateListAnimator="@null"/>
                        
                    <Button
                        android:id="@+id/btn_20k"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:text="20,000"
                        android:textColor="#00C853"
                        android:textSize="12sp"
                        android:background="@drawable/button_outline_green"
                        android:stateListAnimator="@null"/>
                        
                    <Button
                        android:id="@+id/btn_50k"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:text="50,000"
                        android:textColor="#00C853"
                        android:textSize="12sp"
                        android:background="@drawable/button_outline_green"
                        android:stateListAnimator="@null"/>
                        
                    <Button
                        android:id="@+id/btn_100k"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:text="100,000"
                        android:textColor="#00C853"
                        android:textSize="12sp"
                        android:background="@drawable/button_outline_green"
                        android:stateListAnimator="@null"/>
                        
                    <Button
                        android:id="@+id/btn_200k"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:text="200,000"
                        android:textColor="#00C853"
                        android:textSize="12sp"
                        android:background="@drawable/button_outline_green"
                        android:stateListAnimator="@null"/>
                        
                    <Button
                        android:id="@+id/btn_500k"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:text="500,000"
                        android:textColor="#00C853"
                        android:textSize="12sp"
                        android:background="@drawable/button_outline_green"
                        android:stateListAnimator="@null"/>
                </GridLayout>
            </LinearLayout>
            
            <!-- Payment Method Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Payment Method"
                android:textColor="#2C2C2C"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="12dp"/>
            
            <!-- Payment Method Cards -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:layout_marginBottom="20dp">
                
                <!-- Card Payment -->
                <LinearLayout
                    android:id="@+id/btn_card_payment"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/white_card_background"
                    android:gravity="center"
                    android:layout_marginRight="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">
                    
                    <View
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/menu_sales"/>
                        
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Card"
                        android:textColor="#2C2C2C"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginTop="8dp"/>
                        
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Debit/Credit"
                        android:textColor="#808080"
                        android:textSize="10sp"
                        android:layout_marginTop="2dp"/>
                </LinearLayout>
                
                <!-- QRIS Payment -->
                <LinearLayout
                    android:id="@+id/btn_qris_payment"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/white_card_background"
                    android:gravity="center"
                    android:layout_marginLeft="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">
                    
                    <View
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/menu_balance"/>
                        
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="QRIS"
                        android:textColor="#2C2C2C"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginTop="8dp"/>
                        
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Scan QR Code"
                        android:textColor="#808080"
                        android:textSize="10sp"
                        android:layout_marginTop="2dp"/>
                </LinearLayout>
            </LinearLayout>
            
                
        </LinearLayout>
    </ScrollView>
    
</RelativeLayout>