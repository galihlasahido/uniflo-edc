<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:text="@string/enter_pin"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/tv_pin_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/please_enter_your_6_digit_pin"
            android:textColor="@color/text_secondary"
            android:textSize="14sp" />

        <!-- PIN Display Dots -->
        <LinearLayout
            android:id="@+id/pin_dots_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <View
                android:id="@+id/dot1"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_margin="8dp"
                android:background="@drawable/pin_dot_empty" />

            <View
                android:id="@+id/dot2"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_margin="8dp"
                android:background="@drawable/pin_dot_empty" />

            <View
                android:id="@+id/dot3"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_margin="8dp"
                android:background="@drawable/pin_dot_empty" />

            <View
                android:id="@+id/dot4"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_margin="8dp"
                android:background="@drawable/pin_dot_empty" />

            <View
                android:id="@+id/dot5"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_margin="8dp"
                android:background="@drawable/pin_dot_empty" />

            <View
                android:id="@+id/dot6"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_margin="8dp"
                android:background="@drawable/pin_dot_empty"/>

        </LinearLayout>

        <!-- Hidden PIN Input -->
        <EditText
            android:id="@+id/et_pin_input"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:inputType="numberPassword"
            android:maxLength="6" />

        <!-- Number Pad -->
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:columnCount="3"
            android:rowCount="4">

            <!-- Row 1 -->
            <Button
                android:id="@+id/btn_1"
                style="@style/PinPadButton"
                android:textColor="@color/white"
                android:text="1" />

            <Button
                android:id="@+id/btn_2"
                android:textColor="@color/white"
                style="@style/PinPadButton"
                android:text="2" />

            <Button
                android:id="@+id/btn_3"
                android:textColor="@color/white"
                style="@style/PinPadButton"
                android:text="3" />

            <!-- Row 2 -->
            <Button
                android:id="@+id/btn_4"
                android:textColor="@color/white"
                style="@style/PinPadButton"
                android:text="4" />

            <Button
                android:id="@+id/btn_5"
                android:textColor="@color/white"
                style="@style/PinPadButton"
                android:text="5" />

            <Button
                android:id="@+id/btn_6"
                android:textColor="@color/white"
                style="@style/PinPadButton"
                android:text="6" />

            <!-- Row 3 -->
            <Button
                android:id="@+id/btn_7"
                android:textColor="@color/white"
                style="@style/PinPadButton"
                android:text="7" />

            <Button
                android:id="@+id/btn_8"
                android:textColor="@color/white"
                style="@style/PinPadButton"
                android:text="8" />

            <Button
                android:id="@+id/btn_9"
                android:textColor="@color/white"
                style="@style/PinPadButton"
                android:text="9" />

            <!-- Row 4 -->
            <Button
                android:id="@+id/btn_cancel"
                style="@style/PinPadButton"
                android:text="del"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_0"
                android:textColor="@color/white"
                style="@style/PinPadButton"
                android:text="0" />

            <Button
                android:id="@+id/btn_ok"
                style="@style/PinPadButton"
                android:text="OK"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </GridLayout>

        <!-- Error Message -->
        <TextView
            android:id="@+id/tv_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:textColor="@color/error"
            android:textSize="12sp"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>