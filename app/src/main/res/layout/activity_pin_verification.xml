<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:titleTextColor="@android:color/white"
            app:navigationIconTint="@android:color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp"
            android:textColor="@color/text_primary"
            android:gravity="center"
            android:layout_marginBottom="32dp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/et_pin_1"
                android:layout_width="48dp"
                android:layout_height="56dp"
                android:layout_margin="4dp"
                android:background="@drawable/pin_input_background"
                android:gravity="center"
                android:textSize="36sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/et_pin_2"
                android:layout_width="48dp"
                android:layout_height="56dp"
                android:layout_margin="4dp"
                android:background="@drawable/pin_input_background"
                android:gravity="center"
                android:textSize="36sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
 />

            <TextView
                android:id="@+id/et_pin_3"
                android:layout_width="48dp"
                android:layout_height="56dp"
                android:layout_margin="4dp"
                android:background="@drawable/pin_input_background"
                android:gravity="center"
                android:textSize="36sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
 />

            <TextView
                android:id="@+id/et_pin_4"
                android:layout_width="48dp"
                android:layout_height="56dp"
                android:layout_margin="4dp"
                android:background="@drawable/pin_input_background"
                android:gravity="center"
                android:textSize="36sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
 />

            <TextView
                android:id="@+id/et_pin_5"
                android:layout_width="48dp"
                android:layout_height="56dp"
                android:layout_margin="4dp"
                android:background="@drawable/pin_input_background"
                android:gravity="center"
                android:textSize="36sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
 />

            <TextView
                android:id="@+id/et_pin_6"
                android:layout_width="48dp"
                android:layout_height="56dp"
                android:layout_margin="4dp"
                android:background="@drawable/pin_input_background"
                android:gravity="center"
                android:textSize="36sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
 />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Incorrect PIN"
            android:textColor="@color/error"
            android:textSize="14sp"
            android:visibility="gone"
            android:layout_marginBottom="24dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/gray_50"
        android:padding="16dp">

        <!-- Number pad rows -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tv_1"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:background="@drawable/number_pad_button"
                android:gravity="center"
                android:text="1"
                android:textSize="24sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/tv_2"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:background="@drawable/number_pad_button"
                android:gravity="center"
                android:text="2"
                android:textSize="24sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/tv_3"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:background="@drawable/number_pad_button"
                android:gravity="center"
                android:text="3"
                android:textSize="24sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tv_4"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:background="@drawable/number_pad_button"
                android:gravity="center"
                android:text="4"
                android:textSize="24sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/tv_5"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:background="@drawable/number_pad_button"
                android:gravity="center"
                android:text="5"
                android:textSize="24sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/tv_6"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:background="@drawable/number_pad_button"
                android:gravity="center"
                android:text="6"
                android:textSize="24sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tv_7"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:background="@drawable/number_pad_button"
                android:gravity="center"
                android:text="7"
                android:textSize="24sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/tv_8"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:background="@drawable/number_pad_button"
                android:gravity="center"
                android:text="8"
                android:textSize="24sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/tv_9"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:background="@drawable/number_pad_button"
                android:gravity="center"
                android:text="9"
                android:textSize="24sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_clear"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:background="@drawable/number_pad_button_secondary"
                android:gravity="center"
                android:text="Clear"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/tv_0"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:background="@drawable/number_pad_button"
                android:gravity="center"
                android:text="0"
                android:textSize="24sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/tv_backspace"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:background="@drawable/number_pad_button_secondary"
                android:gravity="center"
                android:text="←"
                android:textSize="24sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>