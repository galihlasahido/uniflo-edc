<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Uniflo EDC SDK Demo"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SDK not initialized"
        android:textSize="16sp"
        android:padding="12dp"
        android:background="#f0f0f0"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/btn_init_sdk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Initialize SDK"
        android:textSize="16sp"
        android:layout_marginBottom="10dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cccccc"
        android:layout_marginVertical="10dp"/>

    <Button
        android:id="@+id/btn_test_printer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test Printer"
        android:textSize="16sp"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/btn_test_led"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test LED"
        android:textSize="16sp"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/btn_test_buzzer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test Buzzer"
        android:textSize="16sp"
        android:layout_marginBottom="10dp"/>

</LinearLayout>