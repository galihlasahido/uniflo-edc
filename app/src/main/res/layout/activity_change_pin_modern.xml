<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- Back button only -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            app:tint="#333333" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ubah PIN"
            android:textColor="#333333"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center" />

        <View
            android:layout_width="24dp"
            android:layout_height="24dp" />

    </LinearLayout>

    <!-- Main content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Card insertion section -->
            <LinearLayout
                android:id="@+id/card_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_background"
                android:orientation="vertical"
                android:padding="32dp"
                android:elevation="4dp"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Masukkan Kartu"
                    android:textColor="#333333"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!-- Card animation placeholder -->
                <ImageView
                    android:id="@+id/iv_card_animation"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_card_reader_device"
                    android:scaleType="centerInside" />

                <!-- Card status -->
                <TextView
                    android:id="@+id/tv_card_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Menunggu kartu..."
                    android:textColor="#00C853"
                    android:textSize="14sp"
                    android:layout_marginTop="16dp" />

            </LinearLayout>

            <!-- Old PIN section -->
            <LinearLayout
                android:id="@+id/old_pin_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_background"
                android:orientation="vertical"
                android:padding="32dp"
                android:elevation="4dp"
                android:layout_marginBottom="20dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Masukkan PIN Lama"
                    android:textColor="#333333"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!-- Old PIN bullets display -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">

                    <View
                        android:id="@+id/old_bullet_1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/pin_bullet_empty"
                        android:layout_margin="8dp" />

                    <View
                        android:id="@+id/old_bullet_2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/pin_bullet_empty"
                        android:layout_margin="8dp" />

                    <View
                        android:id="@+id/old_bullet_3"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/pin_bullet_empty"
                        android:layout_margin="8dp" />

                    <View
                        android:id="@+id/old_bullet_4"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/pin_bullet_empty"
                        android:layout_margin="8dp" />

                    <View
                        android:id="@+id/old_bullet_5"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/pin_bullet_empty"
                        android:layout_margin="8dp" />

                    <View
                        android:id="@+id/old_bullet_6"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/pin_bullet_empty"
                        android:layout_margin="8dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- New PIN section -->
            <LinearLayout
                android:id="@+id/new_pin_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_background"
                android:orientation="vertical"
                android:padding="20dp"
                android:elevation="4dp"
                android:layout_marginBottom="20dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Masukkan PIN Baru"
                    android:textColor="#333333"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!-- New PIN bullets display -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">

                    <View
                        android:id="@+id/new_bullet_1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/pin_bullet_empty"
                        android:layout_margin="8dp" />

                    <View
                        android:id="@+id/new_bullet_2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/pin_bullet_empty"
                        android:layout_margin="8dp" />

                    <View
                        android:id="@+id/new_bullet_3"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/pin_bullet_empty"
                        android:layout_margin="8dp" />

                    <View
                        android:id="@+id/new_bullet_4"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/pin_bullet_empty"
                        android:layout_margin="8dp" />

                    <View
                        android:id="@+id/new_bullet_5"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/pin_bullet_empty"
                        android:layout_margin="8dp" />

                    <View
                        android:id="@+id/new_bullet_6"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/pin_bullet_empty"
                        android:layout_margin="8dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Confirm New PIN section -->
            <LinearLayout
                android:id="@+id/confirm_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_background"
                android:orientation="vertical"
                android:padding="20dp"
                android:elevation="4dp"
                android:layout_marginBottom="20dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Konfirmasi PIN Baru"
                    android:textColor="#333333"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!-- Confirm PIN bullets display -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">

                    <View
                        android:id="@+id/confirm_bullet_1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/pin_bullet_empty"
                        android:layout_margin="8dp" />

                    <View
                        android:id="@+id/confirm_bullet_2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/pin_bullet_empty"
                        android:layout_margin="8dp" />

                    <View
                        android:id="@+id/confirm_bullet_3"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/pin_bullet_empty"
                        android:layout_margin="8dp" />

                    <View
                        android:id="@+id/confirm_bullet_4"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/pin_bullet_empty"
                        android:layout_margin="8dp" />

                    <View
                        android:id="@+id/confirm_bullet_5"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/pin_bullet_empty"
                        android:layout_margin="8dp" />

                    <View
                        android:id="@+id/confirm_bullet_6"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/pin_bullet_empty"
                        android:layout_margin="8dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Virtual Keypad (shared for all steps) -->
            <LinearLayout
                android:id="@+id/keypad_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_background"
                android:orientation="vertical"
                android:padding="20dp"
                android:elevation="4dp"
                android:layout_marginBottom="20dp"
                android:visibility="gone">

                <!-- Row 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Button
                        android:id="@+id/key_1"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/button_outline_green"
                        android:text="1"
                        android:textColor="#333333"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/key_2"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/button_outline_green"
                        android:text="2"
                        android:textColor="#333333"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/key_3"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/button_outline_green"
                        android:text="3"
                        android:textColor="#333333"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Row 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Button
                        android:id="@+id/key_4"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/button_outline_green"
                        android:text="4"
                        android:textColor="#333333"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/key_5"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/button_outline_green"
                        android:text="5"
                        android:textColor="#333333"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/key_6"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/button_outline_green"
                        android:text="6"
                        android:textColor="#333333"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Row 3 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Button
                        android:id="@+id/key_7"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/button_outline_green"
                        android:text="7"
                        android:textColor="#333333"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/key_8"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/button_outline_green"
                        android:text="8"
                        android:textColor="#333333"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/key_9"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/button_outline_green"
                        android:text="9"
                        android:textColor="#333333"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Row 4 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Button
                        android:id="@+id/key_clear"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/button_outline_green"
                        android:text="⌫"
                        android:textColor="#FF5722"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/key_0"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/button_outline_green"
                        android:text="0"
                        android:textColor="#333333"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_margin="8dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Progress indicator -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:gravity="center">

                <View
                    android:id="@+id/step_indicator_1"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/pin_bullet_filled" />

                <View
                    android:layout_width="20dp"
                    android:layout_height="2dp"
                    android:background="#E0E0E0"
                    android:layout_gravity="center_vertical" />

                <View
                    android:id="@+id/step_indicator_2"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/pin_bullet_empty" />

                <View
                    android:layout_width="20dp"
                    android:layout_height="2dp"
                    android:background="#E0E0E0"
                    android:layout_gravity="center_vertical" />

                <View
                    android:id="@+id/step_indicator_3"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/pin_bullet_empty" />

            </LinearLayout>

            <!-- Status message -->
            <TextView
                android:id="@+id/status_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Langkah 1 dari 3"
                android:textColor="#666666"
                android:textSize="14sp"
                android:layout_marginTop="12dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>